<div class="container mt-5">
  <div class="card mt-3">
    <div class="card-body">
      <h5 class="card-title"><%= meal.name %></h5>
      <img src="<%= meal.image %>" class="card-img-top" style="width: 50%;">
      <p class="card-text"><strong>Category:</strong> <%= meal.category %></p>
      <p class="card-text"><strong>Country of Origin:</strong> <%= meal.origin %></p>
      <p class="card-text"><strong>Instructions:</strong> <%= meal.instructions %></p>
      
      <h6 class="card-subtitle mt-3 mb-2 text-muted"><strong>Ingredients:</strong></h6>
      <ul class="list-group">
        <% meal.ingredients.each do |ingredient, measure| %>
          <li class="list-group-item"><%= ingredient %> <%= measure %>  </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
